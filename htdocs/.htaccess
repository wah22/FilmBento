RewriteEngine on

RewriteRule ^lists/?$ index.php?controller=ListController
RewriteRule ^settings/?$ index.php?controller=AccountSettingsController
RewriteRule ^login/?$ index.php?controller=LoginController
RewriteRule ^join/?$ index.php?controller=JoinController
RewriteRule ^faq/?$ index.php?controller=FAQController

RewriteRule ^([^/\.]+)/films/?$ index.php?controller=UserController&user=$1&function=films&page=1
RewriteRule ^([^/\.]+)/films/([^/\.]+)?$ index.php?controller=UserController&user=$1&function=films&page=$2

RewriteRule ^([^/\.]+)/?$ index.php?controller=UserController&user=$1
RewriteRule ^films/([^/\.]+)/?$ index.php?controller=FilmController&film=$1 [NC,L,B,QSA,NE]

